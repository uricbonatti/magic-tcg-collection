{
  "name": "magic-tcg-collection",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:uricbonatti/magic-tcg-collection.git",
  "author": "Uric Bonatti <uricbonatti.eng@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./dist",
    "start": "node dist/shared/app/server.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --inspect --transpile-only --ignore-watch node_modules src/shared/app/server.ts dotenv_config_path=.env",
    "start:warn": "node --trace-warnings -r dotenv/config dist/shared/app/server.js dotenv_config_path=.env",
    "typeorm:dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm/cli.js",
    "typeorm:prod": "node ./node_modules/typeorm/cli.js migration:run",
    "test:unit": "jest --silent --runInBand --setupFiles dotenv/config --forceExit && npm run posttest",
    "posttest": "jest-coverage-thresholds-bumper --dry-run --silent",
    "lint": "eslint --fix **/*.ts",
    "sonar": "node sonar.config.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "celebrate": "^15.0.1",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "mongodb": "^4.6.0",
    "ts-deepmerge": "^2.0.1",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "jest-coverage-thresholds-bumper": "^1.1.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.3.0",
    "mocked-env": "^1.3.5",
    "prettier": "^2.6.2",
    "sonarqube-scanner": "^2.8.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.3",
    "husky": "^8.0.0"
  }
}
